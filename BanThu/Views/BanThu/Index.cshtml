@using BanThu.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Thu>
@helper Truncate(string input, int lenght)
{
    if (input.Length < lenght)
    {
        @input
    }
    else
    {

        @input.Substring(0, lenght)<text>...</text>

    }
}




<style>
    .menutrang li {
        display: inline;
    ViewBag.Title = "Index";
    }
</style>
@{
    Layout = "~/Views/Shared/LayOutUser.cshtml";
}
<div class="menutrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .menutrang li {
        display: inline;\\ cac huy
    }
</style>
<div class="content">
    @foreach (var thu in Model)
    {
        <ul>
            <li>
                <a href="@Url.Action("Details", "BanThu", new { id = thu.MaSanPham })"><img alt="@thu.TenSanPham" src="~/images/@thu.AnhBia" style" width:50%" /></a>
                <h2>@thu.TenSanPham</h2>
                <p>@Truncate(thu.MoTa, 80) <a class="more" href="@Url.Action("Details", "BanThu", new { id = thu.MaSanPham })">Xem Chi Tiết</a></p>
            </li>


        </ul>
    }
</div>



