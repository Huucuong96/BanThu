@using BanThu.Models
@model List<GioHang>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/LayOutUser.cshtml";
}

<
<h3 class="header">Thông Tin Hàng Hoá</h3>

<table align="center" border="1">

    <tr style="text-align:center;font-weight:bold;color:#000000">
        <td> Mã sản phẩm</td>
        <td>Tên sản phẩm</td>
        <td>Ảnh Bìa</td>
        <td>Số Lượng</td>
        <td>Đơn Giá</td>
        <td>Thành Tiền</td>


    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold;color:#000000">
            <td>@item.iMaSanPham</td>
            <td>@item.sTenSanPham</td>
            <td><img src="~/images/@item.sAnhBia" style="width:50%"></td>
            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iMaSanPham }))
            {
                <td>
                    @item.iSoLuong
                </td>

                <td>@String.Format("{0:0,0}", @item.dDonGia)</td>
                    <td>@String.Format("{0:0,0}", @item.dThanhTien)</td>


            }
        </tr>
    }


    <tr style="text-align:center;font-weight:bold;color:red">
        <td colspan="3">Số Lượng:@ViewBag.TongSL</td>
        <td colspan="3">Tổng Số Tiền:@String.Format("{0:0,0}", ViewBag.TongTien) VNĐ</td>



    </tr>
    <tr style="font-weight:bold;color:lavenderblush;text-align:right">
        <td colspan="6">
            @Html.ActionLink("TRỞ VỀ GIỎ HÀNG", "GioHang", "GioHang")
        </td>
    </tr>


</table>
<h2 style="text-align:center;color:red">THÔNG TIN ĐẶT HÀNG</h2>
@{
    KhachHang kh = (KhachHang)Session["TaiKhoan"];
}
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px;color:#000000">
            <td> Họ Tên Khách Hàng:</td>
            <td style="font-weight:bold">@kh.TenKhachHang</td>

        </tr>
        <tr style="height:40px;color:#000000">
            <td> Địa Chỉ:</td>
            <td style="font-weight:bold">@kh.DiaChi</td>

        </tr>
        <tr style="height:40px;color:#000000">
            <td>Số Ðiện Thoại:</td>
            <td style="font-weight:bold">
                @kh.DT

            </td>
        </tr>
        <tr style="height:40px;color:#000000">
            <td>Ngày Đặt Hàng:</td>
            <td style="font-weight:bold">
                @DateTime.Now.ToShortDateString()

        </td>

    </tr>
    <tr style="height:40px;color:#000000">
        <td>Ngày Giao Hàng:</td>
        <td style="font-weight:bold">
            <input type="date" name="NgayGiao" />
        </td>

    </tr>
        <tr style="height:40px;color:#000000">
            <td></td>
            <td>
                <input type="submit" value="ĐỒNG Ý ĐẶT HÀNG" />
            </td>

        </tr>

    }
</table>










